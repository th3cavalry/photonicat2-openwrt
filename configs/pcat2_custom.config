# Example custom configuration for Photonicat 2 with Vanilla OpenWrt
# This is a SAMPLE file. Generate your own pcat2_custom.config using diffconfig.sh
# See configs/README.md for instructions
#
# NOTE: This config is for VANILLA OpenWrt, not photonicat/photonicat_openwrt fork
# Target profile must match the device tree we're adding (RK3576 Photonicat 2)

# Target System Configuration
CONFIG_TARGET_rockchip=y
CONFIG_TARGET_rockchip_armv8=y
CONFIG_TARGET_rockchip_armv8_DEVICE_armsom_sige7=y

# LCD Display Support
CONFIG_PACKAGE_pcat2-display-mini=y
# (SPI drivers are dependencies of the display package)

# Fan & Thermal Management
CONFIG_PACKAGE_kmod-pwm=y
CONFIG_PACKAGE_kmod-pwm-rockchip=y
CONFIG_PACKAGE_kmod-thermal=y
CONFIG_PACKAGE_kmod-hwmon-core=y

# Photonicat 2 Hardware Drivers (Kernel)
CONFIG_KERNEL_PHOTONICAT_PM=y
CONFIG_KERNEL_PHOTONICAT_USB_WDT=y
CONFIG_KERNEL_SERIAL_DEV_BUS=y

# Rockchip NPU Support (if available in vanilla OpenWrt)
# CONFIG_PACKAGE_kmod-rknpu=y  # May not be in vanilla OpenWrt

# NVMe Support
CONFIG_PACKAGE_kmod-nvme=y
CONFIG_PACKAGE_kmod-fs-ext4=y

# Block device mounting for overlay
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-uas=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-fs-exfat=y
CONFIG_PACKAGE_kmod-fs-ntfs3=y

# 5G Modem Support (standard OpenWrt packages)
CONFIG_PACKAGE_kmod-usb-serial=y
CONFIG_PACKAGE_kmod-usb-serial-option=y
CONFIG_PACKAGE_kmod-usb-serial-wwan=y
CONFIG_PACKAGE_kmod-usb-net=y
CONFIG_PACKAGE_kmod-usb-net-cdc-mbim=y
CONFIG_PACKAGE_kmod-usb-net-qmi-wwan=y
CONFIG_PACKAGE_kmod-usb-net-rndis=y
CONFIG_PACKAGE_kmod-usb-net-sierrawireless=y
CONFIG_PACKAGE_modemmanager=y
CONFIG_PACKAGE_luci-proto-modemmanager=y
CONFIG_PACKAGE_usbutils=y
CONFIG_PACKAGE_picocom=y

# Core Network & Firewall
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_nftables=y
CONFIG_PACKAGE_kmod-nft-offload=y

# WiFi Support (Drivers & Firmware)
CONFIG_PACKAGE_wpad-openssl=y
CONFIG_PACKAGE_hostapd-utils=y
CONFIG_PACKAGE_iwinfo=y
# Realtek (Common in Rockchip/ArmSoM boards)
CONFIG_PACKAGE_kmod-rtw88=y
CONFIG_PACKAGE_kmod-rtw89=y
CONFIG_PACKAGE_firmware-rtw88=y
CONFIG_PACKAGE_firmware-rtw89=y
# Mediatek (Alternative common PCIe cards)
CONFIG_PACKAGE_kmod-mt7921e=y
CONFIG_PACKAGE_firmware-mt7921=y

# DHCP & DNS
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_odhcpd-ipv6only=y

# System Utilities
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_nano=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_ca-bundle=y
CONFIG_PACKAGE_pciutils=y
CONFIG_PACKAGE_lsblk=y
CONFIG_PACKAGE_git=y

# LuCI Web Interface (standard OpenWrt, not pcat-manager)
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_luci-app-commands=y

# Additional utilities
CONFIG_PACKAGE_fdisk=y
CONFIG_PACKAGE_lsblk=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_bind-dig=y
CONFIG_PACKAGE_iperf3=y
